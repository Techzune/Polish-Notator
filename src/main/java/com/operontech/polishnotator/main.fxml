      xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.operontech.polishnotator.Controller">
    <children>
        <Label layoutX="50.0" layoutY="24.0" style="-fx-text-fill: #FFFFFF;" text="standard notation:">
            <font>
                <Font name="Roboto Light" size="18.0"/>
            </font>
        </Label>
        <TextField fx:id="textFieldInput" layoutX="50.0" layoutY="47.0" prefHeight="30.0" prefWidth="350.0"
                   promptText="input">
            <font>
                <Font name="Roboto Light" size="16.0"/>
            </font>
        </TextField>
        <Button layoutX="85.0" layoutY="94.0" mnemonicParsing="false" onAction="#handleConvert" prefHeight="45.0"
                prefWidth="280.0" style="-fx-background-color: #FF9800; -fx-text-fill: #FFFFFF;"
                text="convert to polish notation" textOverrun="CLIP">
            <font>
                <Font name="Roboto Bold" size="20.0"/>
            </font>
        </Button>
        <TextField layoutX="50.0" layoutY="178.0" prefHeight="30.0" prefWidth="350.0" promptText="output">
            <font>
                <Font name="Roboto Light" size="16.0"/>
            </font>
        </TextField>
        <Label layoutX="50.0" layoutY="155.0" style="-fx-text-fill: #FFFFFF;" text="polish notation:">
            <font>
